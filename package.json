{
  "name": "admin-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prestart": "yarn codegen",
    "copy-schemas-linux": "cpx 'src/**/*.graphql' dist",
    "copy-schemas-windows": "cpx src/**/*.graphql dist",
    "build": "tsc --project tsconfig.build.json && npm run copy-schemas-linux",
    "start": "ts-node-dev -r dotenv/config -r tsconfig-paths/register src/index",
    "cdk-destroy": "cd .aws/cdk/memories-server && npm run cdk-destroy",
    "cdk-install": "cd .aws/cdk/memories-server && npm install",
    "cdk-synth": "cd .aws/cdk/memories-server && npm run cdk-synth",
    "test": "jest",
    "codegen": "graphql-codegen",
    "format": "prettier \"**/*.ts\" --write"
  },
  "_moduleAliases": {
    "src": "."
  },
  "jest-junit": {
    "outputDirectory": "./test-results"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.8",
    "@graphql-codegen/typescript-resolvers": "^1.17.8",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.4.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "14.0.27",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.6",
    "apollo-server-testing": "^2.16.1",
    "cpx": "1.5.0",
    "dotenv": "^8.2.0",
    "jest": "^26.3.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "ts-node": "8.10.2",
    "ts-node-dev": "^1.0.0-pre.61",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.1.0",
    "@graphql-tools/merge": "^6.1.0",
    "apollo-server-express": "^2.16.1",
    "apollo-server": "^2.18.1",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-scalars": "^1.2.6",
    "graphql-tools": "^6.0.18",
    "jest-junit": "^11.1.0",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.8",
    "module-alias": "^2.2.2",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "uuid": "^8.3.0",
    "yup": "^0.29.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "globalSetup": "<rootDir>/tests/global-setup.ts",
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
